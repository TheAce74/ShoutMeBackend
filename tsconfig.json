{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "app",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["app"],
  "exclude": ["node_modules"]
}
